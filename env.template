# ==============================================
# FormForge API - Environment Configuration
# ==============================================
# ⚠️ IMPORTANT: Never commit .env file to Git!
# Copy this file to .env and update with real values

# ==============================================
# Database Configuration
# ==============================================
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=db
DB_PORT=5432
DB_NAME=formforge_db

# Port mapping - Change these for different projects
API_PORT=8001

# ==============================================
# API Keys & Secrets
# ==============================================
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# JWT Authentication
# ==============================================
# ⚠️ IMPORTANT: Generate a secure secret key for production!
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# Seed Configuration (Development only)
# ==============================================
RUN_SEED=false
CLEAR_DATA=false

# ==============================================
# PgAdmin Configuration (Optional)
# ==============================================
PGADMIN_EMAIL=admin@formforge.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5051

